{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Logicscript",
	"scopeName": "source.logicscript",
	"patterns": [
		{
			"match": "[0-9]|[0-9]+'",
			"name": "constant.numeric"
		},
		{
			"match": "if|while|for|end|when|any|once|update|else",
			"name": "keyword.control.logiscript"
		},
		{
			"match": "==|>=|<=|<|>|&|\\||\\+|-|\\*|\\/|!",
			"name": "keyword.operator"
		},
		{
			"match": "(#.*)",
			"name": "comment.line"
		},
		{
			"match": "mem|in|out",
			"name": "variable"
		}
	]
}